@model Hovedopgave.Models.Ticket

@{
    ViewData["Title"] = "Opret sag";
}

<style>

    #myInput {
        box-sizing: border-box;
        font-size: 16px;
        padding: 5px;
        width: 100%;
        margin-bottom: 10px;
        border: 1px solid #ddd;
    }

    #mySelect {
        width: 100%;
        font-size: 16px;
        border: 1px solid #ddd;
        padding: 5px;
        height: 100px;
    }

        #mySelect option {
            display: none; /* Hide options by default */
            padding: 5px;
        }
</style>

<h1>Opret sag</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Beskrivelse</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control">
                    <option value="1">Low</option>
                    <option value="2">Medium</option>
                    <option value="3">High</option>
                </select>

                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Vælg brugere</label>
                <select asp-for="SelectedUserIds" class="form-control" asp-items="ViewBag.Users" multiple="multiple"></select>
            </div>

            <div class="form-group">
                <label class="control-label">Vælg Station</label>
                <div>
                    <input type="text" placeholder="Search..." id="myInput" onkeyup="filterSelectOptions()">
                    <select asp-for="StationId" id="mySelect" class="form-control" asp-items="ViewBag.Stations" size="8"></select>
                </div>
            </div>


            <div style="margin-top: 10px" class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-secondary" asp-action=@ViewBag.Return>Tilbage til liste</a>
</div>

<script>
    function filterSelectOptions() {
      const input = document.getElementById("myInput");
      const filter = input.value.toUpperCase();
      const select = document.getElementById("mySelect");
      const options = select.getElementsByTagName("option");

      let visibleOptionCount = 0;

      for (let i = 0; i < options.length; i++) {
        const txtValue = options[i].textContent || options[i].innerText;
        if (filter && txtValue.toUpperCase().indexOf(filter) > -1) {
          options[i].style.display = "block";
          visibleOptionCount++;
        } else {
          options[i].style.display = "none";
        }
      }

      // Show or hide the select box based on whether options are visible
      select.style.display = visibleOptionCount > 0 ? "" : "none";
    }

    // Hide the select box initially
    document.getElementById("mySelect").style.display = "none";
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
