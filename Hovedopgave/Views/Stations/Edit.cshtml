@model Hovedopgave.Models.Station

@{
    ViewData["Title"] = "Rediger Station";
}

<h1>Rediger Station</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Navn</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationX" class="control-label">X Lokation</label>
                <input asp-for="LocationX" class="form-control" />
                <span asp-validation-for="LocationX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationY" class="control-label">Y Lokation</label>
                <input asp-for="LocationY" class="form-control" />
                <span asp-validation-for="LocationY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Noter</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="margin-top: 10px" type="submit" value="Gem" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button style="margin-top: 10px" accesskey="$0" class="btn btn-secondary" onclick="window.location.href = '/Stations/Index'">Tilbage til liste</button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
