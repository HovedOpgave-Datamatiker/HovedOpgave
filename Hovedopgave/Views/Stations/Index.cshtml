@model IEnumerable<Hovedopgave.Models.Station>

@{
    ViewData["Title"] = "Stationer";
}

<h1>Stationer</h1>

<p>
    <button class="btn btn-primary" onclick="window.location.href = '/Stations/Create'">Opret ny</button>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocationY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                Muligheder
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @item.LocationX.ToString("F2")
                </td>
                <td>
                    @item.LocationY.ToString("F2")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    <div class="d-flex">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-2">Rediger</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary me-2">Detaljer</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Slet</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
